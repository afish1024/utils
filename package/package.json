{
  "name": "utils",
  "version": "1.0.0",
  "private": false,
  "description": "A collection of small JavaScript utilities",
  "homepage": "https://utils.wstone.uk/",
  "bugs": {
    "url": "https://github.com/will-stone/utils/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/utils"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.uk",
    "url": "https://wstone.uk"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "bench": "vitest bench",
    "build": "tsup source/index.ts --dts --format esm,cjs --clean",
    "postbuild": "rimraf ../website/data/typedoc.json && typedoc",
    "dev": "npm run build -- --watch --onSuccess \"npm run postbuild\"",
    "prepublishOnly": "npm run build",
    "test": "vitest --watch=false",
    "coverage": "vitest run --coverage && npm run copy",
    "copy": "rimraf ../website/public/coverage && cp -R coverage ../website/public",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "devDependencies": {
    "@types/node": "^18.15.5",
    "@vitest/coverage-v8": "^0.34.6",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typedoc": "^0.23.28",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.3",
    "vitest": "^0.34.6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
